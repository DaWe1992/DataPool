<mvc:View
	controllerName="com.sap.ml.data.pool.controller.Home"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	height="100%">

	<Page
		id="homePage"
		title="{i18n>Home.page.header}"
		class="sapUiResponsiveContentPadding">
		<content>
			<VBox>
				<Label
					text="{i18n>App.title}"
					class="text-home sapUiSmallMarginBottom"/>
				<Text
					text="{i18n>App.description}"
					renderWhitespace="true"
					class="text-home"
					width="60%"/>
			</VBox>
		</content>
	</Page>
</mvc:View>