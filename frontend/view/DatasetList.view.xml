<core:View
	controllerName="com.sap.ml.data.pool.controller.DatasetList"
	xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	height="100%">
	
	<Page title="{i18n>Datasetlist.page.header}">
		<subHeader>
			<Toolbar>
				<SearchField
					liveChange="onSearch"
					width="100%"/>
			</Toolbar>
		</subHeader>
		<content>
			<List
				id="datasetList"
				items="{path: '/'}"
				height="100%">
				<items>
					<CustomListItem>
						<VBox
							width="95%"
							class="sapUiTinyMarginBegin sapUiSmallMarginTopBottom">
							<HBox width="25%">
								<core:Icon
									src="sap-icon://table-chart"
									size="2rem"
									class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Label
										text="{file_title} ({file_name_short})"
										class="bold"/>
									<Label
										text="Uploaded: {file_date}"
										class="italic"/>
									<Label
										text="Size: {file_size_mb} MB"
										class="italic"/>
									<HBox>
										<Link
											text="{i18n>Datasetlist.download}"
											href="/datasets/{file_name}"
											class="underline"/>
										<Text
											text="|"
											class="sapUiTinyMarginBegin sapUiTinyMarginEnd admin"/>
										<Link
											text="{i18n>Datasetlist.delete}"
											press="onDeleteDataset"
											app:file_id="{file_id}"
											class="underline admin"/>
										<Text
											text="|"
											class="sapUiTinyMarginBegin sapUiTinyMarginEnd admin"/>
										<Link
											text="{i18n>Datasetlist.update.description}"
											press="onOpenAlterDescriptionDialog"
											app:file_id="{file_id}"
											class="underline admin"/>
									</HBox>
								</VBox>
							</HBox>
							<VBox class="sapUiSmallMarginBegin">
								<core:HTML content="{file_description}"/>
							</VBox>
						</VBox>
					</CustomListItem>
				</items>
				<infoToolbar>
					<Toolbar active="false">
						<Label id="toolbarLabel"/>
					</Toolbar>
				</infoToolbar>
			</List>
		</content>
	</Page>
</core:View>