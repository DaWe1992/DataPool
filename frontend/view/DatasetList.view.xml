<core:View
	controllerName="com.sap.ml.data.pool.controller.DatasetList"
	xmlns="sap.m" xmlns:core="sap.ui.core"
	height="100%">
	
	<Page title="{i18n>Datasetlist.page.header}">
		<subHeader>
			<Toolbar>
				<SearchField
					liveChange="onSearch"
					width="100%"/>
			</Toolbar>
		</subHeader>
		<content>
			<List
				id="datasetList"
				items="{path: '/'}"
				height="100%">
				<items>
					<CustomListItem press="onDatasetItemPress">
						<HBox width="100%">
							<HBox width="25%">
								<core:Icon
									src="sap-icon://table-chart"
									size="2rem"
									class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Label
										text="{file_name}"
										class="bold"/>
									<Link
										text="{i18n>Datasetlist.download}"
										href="/datasets/{file_name}"
										class="underline"/>
								</VBox>
							</HBox>
							<VBox
								width="65%"
								class="sapUiLargeMarginBegin sapUiSmallMarginTopBottom">
								<Text
									text="{file_description}"
									class="italic justify"/>
							</VBox>
						</HBox>
					</CustomListItem>
				</items>
				<infoToolbar>
					<Toolbar active="false">
						<Label id="toolbarLabel"/>
					</Toolbar>
				</infoToolbar>
			</List>
		</content>
	</Page>
</core:View>