<core:View
	controllerName="com.sap.ml.data.pool.controller.App"
	xmlns="sap.m" xmlns:core="sap.ui.core"
	height="100%">
	
	<SplitContainer
		id="container"
		initialMaster="master">
		<masterPages>
			<Page
				id="master"
				title="{i18n>Nav}"
				icon="sap-icon://action"
				class="sapUiStdPage">
				<content>
					<List>
						<items>
							<StandardListItem
								title="{i18n>Nav.home}"
								icon="sap-icon://home"
								type="Navigation"
								press="onPressGoToHome"/>
							<StandardListItem
								title="{i18n>Nav.datasets}"
								icon="sap-icon://table-chart"
								type="Navigation"
								press="onPressGoToDatasets"/>
							<StandardListItem
								id="itemNavUpload"
								title="{i18n>Nav.upload}"
								icon="sap-icon://upload"
								type="Navigation"
								press="onPressGoToUpload"/>
							<StandardListItem
								id="itemNavLogs"
								title="{i18n>Nav.logs}"
								icon="sap-icon://contacts"
								type="Navigation"
								press="onPressGoToLogs"/>
							<ActionListItem
								id="itemNavLogout"
								text="{i18n>Nav.logout}"
								press="onPressLogout"/>
						</items>
					</List>
				</content>
			</Page>
		</masterPages>
	</SplitContainer>
</core:View>