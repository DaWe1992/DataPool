extends layout

block content
	div.container
		div.row
			div.col-xs-0.col-sm-3.col-md-4
			div.col-xs-12.col-sm-6.col-md-4
				h1.text-center.title Sign In
					div.wall
						form(action="/login", method="POST")
							small
								label(for="username") *Username:
							input(type="text", name="username" class="form-control",required, autofocus)
							small
								label(for="password") *Password:
							input(type="password", name="password" class="form-control", required)
							button(class="btn btn-lg btn-primary btn-block", type="submit") Sign in
							span.clearfix
							<!--a(href="/signup", class="btn btn-default btn-block") Sign up-->
					#message
					if message
						p.text-center.error-message #{message}
			div.col-xs-0.col-sm-3.col-md-4
		div.row
			div.col-xs-0.col-sm-3.col-md-4
			div.col-xs-12.col-sm-6.col-md-4
				h1.text-center.title Important Remark
					div.wall-small
						.image-block
							img.className#IdName(src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Google_Chrome_icon_%28September_2014%29.svg/512px-Google_Chrome_icon_%28September_2014%29.svg.png").img-size-small.margin-right
							label Please use Google Chrome!
							img.className#IdName(src="https://www.tonyherman.com/wp-content/uploads/2016/06/do-not-use-ie.png").img-size-small.margin-left